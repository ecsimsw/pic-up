<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xi="http://www.w3.org/2001/XInclude">
  <Properties>
    <Property name="BASE_DIR">logs/storage</Property>
    <Property name="FILE_LOG_DAY_INTERVAL">1</Property>
    <Property name="FILE_DELETE_DAY_INTERVAL">7</Property>
  </Properties>
  <Appenders>
    <xi:include href="components/console-appender.xml"/>
    <xi:include href="components/file-appender.xml"/>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="ConsoleAppender"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>
